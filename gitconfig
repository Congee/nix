[alias]
    push = push --follow-tags
    authors = shortlog -sn
    fetch = fetch --all --prune
    tree = log --graph --decorate --pretty=oneline --abbrev-commit --boundary
    co = checkout
    meh = commit --amend --no-edit
    frebase = !"git rebase --interactive $(git log --pretty=oneline --decorate --abbrev-commit | fzf | cut -d ' ' -f1)^"
    lg = log --all --color --graph --pretty=format:"%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset" --abbrev-commit
    cmp = log --left-right --graph --oneline --cherry
    cp = cherry-pick
    prune-local = !"git branch --verbose | fgrep '[gone]' | awk '{print $1}' | xargs git branch -D"
[merge]
    tool = vimdiff
    ff = true
[pull]
    ff = true
[mergetool]
    prompt = true
[mergetool "vimdiff"]
    cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool]
    prompt = true
[diff]
    tool = vimdiff
