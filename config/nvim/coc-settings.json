{
    "languageserver": {
        "haskell": {
            "command": "haskell-language-server",
            "args": [
                "--lsp",
                "--debug",
                "--logfile=/tmp/hls.log"
            ],
            "rootPatterns": [
                "*.cabal",
                "stack.yaml",
                "cabal.project",
                "package.yaml",
                "hie.yaml"
            ],
            "filetypes": [
                "haskell",
                "lhaskell"
            ],
            "initializationOptions": {
                "haskell": {
                    "formattingProvider": "fourmolu",
                    "hlintOn": true
                }
            }
        },
        "terraform": {
            "command": "terraform-lsp",
            "filetypes": [
                "terraform"
            ]
        },
        "nix": {
            "command": "nil",
            "filetypes": ["nix"],
            "rootPatterns": ["flake.nix", ".git"]
        },
        "racket": {
            "command": "xvfb-run",
            "args": [
                "racket",
                "--lib",
                "racket-langserver"
            ],
            "filetypes": [
                "scheme",
                "racket"
            ]
        }
    },
    "rust-analyzer.updates.channel": "stable",
    "rust-analyzer.diagnostics.disabled": ["unresolved-proc-macro"],
    "python.analysis.typeCheckingMode": "strict",
    "python.analysis.useLibraryCodeForTypes": true,
    "python.linting.flake8Enabled": true,
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "coc.preferences.extensionUpdateCheck": "weekly",
    "coc.preferences.useQuickfixForLocations": true,
    "markdown-preview-enhanced.usePandocParser": false,
    "markdownlint.config": {
        "blanks-around-headers": false,
        "blanks-around-fences": false,
        "blanks-around-lists": false,
        "code-block-style": false
    },
    "Lua.diagnostics.globals": ["vim"],
    "Lua.telemetry.enable": false,
    "suggest.noselect": true,
    "suggest.autoTrigger": "trigger",
    "suggest.virtualText": true,
    "suggest.removeDuplicateItems": true,
    "explorer.icon.enableNerdfont": true,
    "explorer.icon.source": "nvim-web-devicons",
    "explorer.previewAction.onHover": false,
    "explorer.floating.border.enable": true,
    "git.enableGutters": false,
    "git.addGBlameToVirtualText": true,
    "tailwindCSS.trace.server": "verbose",
    "metals.statusBarEnabled": true,
    "sumneko-lua.enableNvimLuaDev": true,
    "sumneko-lua.checkUpdate": false,
    "sumneko-lua.logPath": "/tmp/sumneko-lua",
    "clangd.compilationDatabasePath": "build",
    "clangd.trace.server": "verbose",
    "yaml.schemas": {"filetypes": ["yaml"]},
    "yaml.customTags": [
        "!Base64 scalar",
        "!Cidr scalar",
        "!And sequence",
        "!Equals sequence",
        "!If sequence",
        "!Not sequence",
        "!Or sequence",
        "!Condition scalar",
        "!FindInMap sequence",
        "!GetAtt scalar",
        "!GetAZs scalar",
        "!ImportValue scalar",
        "!Join sequence",
        "!Select sequence",
        "!Split sequence",
        "!Sub scalar",
        "!Transform mapping",
        "!Ref scalar"
    ],
    "clangd.fallbackFlags": [
        "-std=c++17"
    ],
    "diagnostic-languageserver.debug": true,
    "diagnostic-languageserver.filetypes": {
        "sh": "shellcheck"
    },
    "go.goplsOptions": {
        "gofumpt": true,
        "staticcheck": true,
        "linksInHover": false,
        "semanticTokens": true
    }
}
