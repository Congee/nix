{
    "languageserver": {
        "haskell": {
            "command": "haskell-language-server",
            "args": [
                "--lsp",
                "--debug",
                "--logfile=/tmp/hls.log"
            ],
            "rootPatterns": [
                "*.cabal",
                "stack.yaml",
                "cabal.project",
                "package.yaml",
                "hie.yaml"
            ],
            "filetypes": [
                "haskell",
                "lhaskell"
            ],
            "initializationOptions": {
                "haskell": {
                    "formattingProvider": "fourmolu",
                    "hlintOn": true
                }
            }
        },
        "terraform": {
            "command": "terraform-lsp",
            "filetypes": [
                "terraform"
            ]
        },
        "nix": {
            "command": "rnix-lsp",
            "filetypes": [
                "nix"
            ]
        },
        "racket": {
            "command": "xvfb-run",
            "args": [
                "racket",
                "--lib",
                "racket-langserver"
            ],
            "filetypes": [
                "scheme",
                "racket"
            ]
        },
        "yaml.schemas": {
            "filetypes": ["yaml"]
        }
    },
    "rust-analyzer.updates.channel": "stable",
    "rust-analyzer.diagnostics.disabled": ["unresolved-proc-macro"],
    "python.analysis.typeCheckingMode": "strict",
    "python.analysis.useLibraryCodeForTypes": true,
    "python.linting.flake8Enabled": true,
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "coc.preferences.extensionUpdateCheck": "weekly",
    "markdown-preview-enhanced.usePandocParser": true,
    "Lua.diagnostics.globals": ["vim"],
    "Lua.telemetry.enable": true,
    "suggest.noselect": true,
    "suggest.autoTrigger": "trigger",
    "suggest.virtualText": true,
    "suggest.removeDuplicateItems": true,
    "explorer.icon.enableNerdfont": true,
    "explorer.icon.source": "nvim-web-devicons",
    "explorer.previewAction.onHover": false,
    "explorer.floating.border.enable": true,
    "git.enableGutters": false,
    "git.addGBlameToVirtualText": true,
    "tailwindCSS.trace.server": "verbose",
    "metals.statusBarEnabled": true,
    "sumneko-lua.enableNvimLuaDev": true,
    "sumneko-lua.checkUpdate": false,
    "clangd.fallbackFlags": [
        "-std=c++17"
    ],
    "diagnostic-languageserver.debug": true,
    "diagnostic-languageserver.filetypes": {
        "sh": "shellcheck"
    },
    "go.goplsOptions": {
        "staticcheck": true
    }
}
